<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:gravity="center_vertical|start"
    android:minHeight="@dimen/md_listitem_height"
    android:background="@drawable/md_item_selector">

    <com.ivianuu.materialdialogs.internal.RtlTextView
        android:id="@+id/md_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:layout_marginTop="@dimen/md_listitem_vertical_margin"
        android:layout_marginBottom="@dimen/md_listitem_vertical_margin"
        android:layout_marginStart="@dimen/md_listitem_margin_left"
        android:layout_marginEnd="@dimen/md_dialog_frame_margin_horizontal"
        android:textSize="@dimen/md_listitem_textsize"
        android:textColor="@color/md_list_item_textcolor"
        tools:text="Item" />

</FrameLayout>
